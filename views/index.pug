doctype html
html(lang="en")
    head
        title HUGE NavExercise
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        link(rel='stylesheet', href='/styles/main.css')
        link(href='/assets/images/favicon.ico', rel='icon')
    body
        #black-overlay
        header#site-header
            a.header-logo(href="/")
                img(src="assets/images/HUGE-white.png" width="60")
            a.burger-menu(href="#" role="button")
                div.burger
                div.cross
                p.hidden Toggle Burger Menu
            nav(aria-label='Huge')
                ul#menu-bar(role='menubar', aria-label='Huge')
                    each val in menu
                        each primary in val
                            li
                                a(class=primary.submenu !== undefined ? 'primary-link has-submenu' : 'primary-link', role='menuitem', aria-haspopup= primary.submenu !== undefined ? 'true' : 'false', aria-expanded='false', href='#', tabindex= primary.submenu !== undefined ? "-1" : "0" )= primary.item
                                if primary.submenu !== undefined
                                    ul(role='menu', aria-label=primary.item).submenu
                                        each secondary, index in primary.submenu
                                            li(role='none')
                                                a.secondary-link(role='menuitem', href='#', tabindex='-1')= secondary
